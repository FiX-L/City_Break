<div class="card_enigme">
  <h1><%= @enigma.title %></h1>
  __________________________
  <p><%= @enigma.description.html_safe %></p>

  __________________________

  <%# <div class="card_jeu_photo"> %>
<h3>Valide ton choix</h3>
  <div class="infos">

    <div class="photo_answer">
      <% @enigma.answers.shuffle.each do |answer| %>
        <% if answer.is_good_answer %>
          <% if @enigma.point_of_interest %>
            <%= link_to point_of_interest_path(@enigma.point_of_interest), class: "answer-link" do %>
              <div class="photos" style="background-image: url('<%= answer.poster_url %>');">
                <%# <%= answer.content %>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <%= link_to penalty_path(@user_game, @enigma), class: "false-answer-button", remote: true, data:{action: "click->penalty#send"} do %>
            <div class="photos" style="background-image: url('<%= answer.poster_url %>');">
              <%# <%= answer.content %>
            </div>
            <% end %>
        <% end %>

      <%# <% else %>

        <%# <%= link_to "False Answer", penalty_path(@user_game, @enigma), class: "false-answer-button", remote: true, data:{turbo_method: "patch"} %>

      <% end %>
    </div>
  </div>

</div>
